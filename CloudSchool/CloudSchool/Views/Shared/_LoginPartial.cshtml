@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <button class="dropbtn">
                     @User.Identity.GetUserName() السلام علیکم
                    <i class="fa fa-caret-down"></i>
                </button>
                <div class="dropdown-content">
                    @Html.ActionLink("Dashboard", "Index", "Dashboards", routeValues: null, htmlAttributes: new { id = "loginLink" })
                    @Html.ActionLink("Account", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                    <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                </div>
            </li>
        <li></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
